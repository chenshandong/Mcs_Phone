<com.github.obsessive.library.widgets.StretchScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.yzd.android.mcs_phone.ui.fragment.TVFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/tv_head_layout"/>

        <include
            layout="@layout/tv_num_keyboard_layout"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include
                    layout="@layout/tv_navigation_left_layout"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <include
                    layout="@layout/tv_navigation_layout"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include
                    layout="@layout/tv_navigation_right_layout"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</com.github.obsessive.library.widgets.StretchScrollView>
