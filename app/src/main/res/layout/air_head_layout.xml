<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:showIn="@layout/fragment_air_condition">

    <com.andexert.library.RippleView
        android:id="@+id/btn_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rv_rippleDuration="300"
        app:rv_color="@color/alpha_10_black"
        rv_centered="true"
        android:layout_weight="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="开关机"
                android:textSize="15sp"
                android:id="@+id/textview20"
                android:layout_marginRight="53dp"
                android:layout_marginEnd="53dp"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="On/Off"
                android:id="@+id/textView16"
                android:layout_below="@+id/textview20"
                android:layout_alignLeft="@+id/textview20"
                android:layout_alignStart="@+id/textview20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:background="@mipmap/air_power"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:layout_alignTop="@+id/textview20"
                android:layout_toLeftOf="@+id/textview20"
                android:layout_toStartOf="@+id/textview20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView17"
                android:background="@color/alpha_05_black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView19"
                android:background="@color/alpha_05_black"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/textView17"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/btn_useAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rv_rippleDuration="300"
        app:rv_color="@color/alpha_10_black"
        rv_centered="true"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="应用全部"
                android:textSize="15sp"
                android:id="@+id/textview19"
                android:layout_marginRight="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Use All"
                android:id="@+id/textView18"
                android:layout_below="@+id/textview19"
                android:layout_alignLeft="@+id/textview19"
                android:layout_alignStart="@+id/textview19" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:background="@mipmap/air_all"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:layout_alignTop="@+id/textview19"
                android:layout_toLeftOf="@+id/textview19"
                android:layout_toStartOf="@+id/textview19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView20"
                android:background="@color/alpha_05_black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </com.andexert.library.RippleView>
</LinearLayout>