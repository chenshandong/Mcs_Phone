<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="4dp">


    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rv_rippleDuration = "300"
        app:rv_color = "@color/alpha_10_black"
        rv_centered="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/head"
                android:background="@mipmap/save_highlight"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="节能模式"
                android:textColor="@color/text_color"
                android:id="@+id/title"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/head"
                android:layout_toRightOf="@+id/head"
                android:layout_toEndOf="@+id/head" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Saving Mode"
                android:textColor="@color/text_color"
                android:id="@+id/subtitle"
                android:layout_alignBottom="@+id/head"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title" />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/alpha_10_black"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true" />-->
        </RelativeLayout>
    </com.andexert.library.RippleView>
    </android.support.v7.widget.CardView>
</LinearLayout>