<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="音量"
        android:id="@+id/textView38"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Volume"
        android:id="@+id/textView39"
        android:layout_below="@+id/textView38"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_vol_down"
        android:background="@drawable/btn_projector_vol_down_selector"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="17dp"
        android:layout_alignTop="@+id/btn_vol_up"
        android:layout_alignRight="@+id/textView38"
        android:layout_alignEnd="@+id/textView38" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_vol_up"
        android:background="@drawable/btn_projector_vol_up_selector"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView39"
        android:layout_alignLeft="@+id/textView38"
        android:layout_alignStart="@+id/textView38"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="投影布"
        android:id="@+id/textView40"
        android:layout_below="@+id/btn_vol_down"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Projection"
        android:id="@+id/textView41"
        android:layout_below="@+id/textView40"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_screen_up"
        android:background="@drawable/btn_projector_up_selector"
        android:layout_below="@+id/textView41"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/btn_vol_down"
        android:layout_alignEnd="@+id/btn_vol_down" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_screen_down"
        android:background="@drawable/btn_projector_down_selector"
        android:layout_alignTop="@+id/btn_screen_up"
        android:layout_alignLeft="@+id/btn_vol_up"
        android:layout_alignStart="@+id/btn_vol_up" />
</RelativeLayout>