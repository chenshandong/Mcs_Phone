<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.andexert.library.RippleView
        android:id="@+id/btn_music"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:rv_rippleDuration = "300"
        app:rv_color = "@color/alpha_10_black"
        android:layout_weight="0.2"
        rv_centered="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="6dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/musicSelector"
                android:visibility="invisible"
                android:background="@color/music_list_selected_color"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:singleLine="true"
                android:id="@+id/musicName"
                android:textSize="16sp"
                android:textColor="@color/music_name_color"
                android:layout_alignTop="@+id/musicSelector"
                android:layout_alignLeft="@+id/singer"
                android:layout_alignStart="@+id/singer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:singleLine="true"
                android:id="@+id/singer"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_alignBottom="@+id/musicSelector"
                android:layout_toRightOf="@+id/musicSelector"
                android:layout_toEndOf="@+id/musicSelector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView22"
                android:background="@color/alpha_05_black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </com.andexert.library.RippleView>


    <RelativeLayout
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@drawable/btn_music_delete_selector"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView25"
            android:background="@color/alpha_05_black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>